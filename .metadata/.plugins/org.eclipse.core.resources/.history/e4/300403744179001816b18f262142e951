from selenium import webdriver
from time import sleep
import readConfig as readConfig
from lib2to3.pgen2.token import EQUAL
# from selenium.webdriver.common.keys import Keys
localReadConfig = readConfig.ReadConfig()
browser = webdriver.Chrome()
def env(envname):
    if envname == 'uat':
        url=localReadConfig.get_env('uat')
    if envname == 'test':
        url=localReadConfig.get_env('test')
    try:
        browser.get(url)
    except UnboundLocalError as e:
        print(e,'输入的环境不存在，结束进程')
        browser.quit()
        exit()
    else: #不管是否有异常都会执行  
        print('登陆%s环境'%envname)

env('uat')
def login(account,passwd):
    browser.find_element_by_id('username').send_keys(account)
    browser.find_element_by_id('password').send_keys(passwd)
    browser.find_element_by_xpath('/html/body/div/div/form/button').click()
login('shiyuyu','123456')
# assert '' in browser.title
assert browser.title == '后台管理系统'
browser.maximize_window()
browser.implicitly_wait(10)

browser.find_element_by_class_name('nav-label').click()
sleep(2)
browser.find_element_by_class_name('J_menuItem').click()
sleep(20) 

browser.find_element_by_css_selector('#inner > div > div:nth-child(2) > div > form > div:nth-child(3) > div > div > input').send_keys('58476238')
browser.find_element_by_css_selector('#inner > div > div:nth-child(2) > div > form > div:nth-child(8) > div > button > span').click()
sleep(10)
    
browser.quit()